<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="match_parent"
   	android:layout_height="wrap_content"
    android:clickable="false"
    >

    <CheckBox
        android:id="@+id/check_box_indicator"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"     
        android:layout_alignParentLeft="true"
        android:clickable="false"
        android:checked="true"
        android:duplicateParentState="true"
        android:layout_margin="3dp"
        />

    <TextView
        android:id="@+id/text_view_content_indicator" 
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:maxLength="2"
        android:text="sa"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        />    
    
	<TextView 
        android:id="@+id/text_view_content_title" 
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_toRightOf="@id/check_box_indicator"
   		android:layout_toLeftOf="@id/text_view_content_indicator"
   		android:singleLine="false"
   		android:text="222222222"
   		android:layout_marginTop="15dp"
   		android:textSize="18sp"
   		android:textColor="@android:color/black"
	    android:gravity="center_vertical"
	    />
    
</RelativeLayout>
